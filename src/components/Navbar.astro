---
import { Astronav, MenuIcon, MenuItems } from 'astro-navbar';

const menuitems = [
	{
		title: 'About',
		path: '#about',
	},
	{
		title: 'Projects',
		path: '#projects',
	},
	{
		title: 'Skills',
		path: '#skills',
	},
	{
		title: 'Education',
		path: '#education',
	},
	{
		title: 'Contact',
		path: '#contact',
	},
];
---

<header data-testId="header" class="my-5 flex flex-col items-center justify-between lg:flex-row">
	<Astronav>
		<div class="flex w-full items-center justify-between lg:w-auto">
			<div class="block lg:hidden">
				<MenuIcon class="h-4 w-4 text-black" />
			</div>
		</div>
		<MenuItems class="mt-2 hidden w-full lg:mt-0 lg:flex lg:w-auto">
			<ul class="flex flex-col lg:flex-row lg:gap-3">
				{
					menuitems.map((item) => (
						<>
							<li>
								<a
									aria-label="navigation link"
									href={item.path}
									class="flex py-2 text-black hover:text-green lg:px-3"
								>
									{item.title}
								</a>
							</li>
						</>
					))
				}
				
			</ul>
		</MenuItems>
	</Astronav>
</header>
