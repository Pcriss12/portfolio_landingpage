---
import { Image } from '@astrojs/image/components';
interface Props {
	alt?: string;
	image: string;
	title?: string;
	description: string;
}

const { alt = 'Skills image', image, title = 'Skills title', description = 'Skills description' } = Astro.props;
---

<section class="w-full py-3 md:pr-3 md:w-1/2 lg:w-1/3">
	<article
		data-testId="card"
		class="skills-article rounded-xl bg-white p-4 shadow-lg duration-100 hover:scale-105 hover:transform hover:shadow-xl"
	>
		<div class="relative flex items-end overflow-hidden rounded-xl">
			<Image
				src={image}
				alt={alt}
				aspectRatio="4:4"
				format="png"
				width={90}
				height={90}
				loading="eager"
			/>
		</div>
		<div class="mt-1 p-2">
			<h3 class="text-xl text-grey text-center lg:text-2xl">{title}</h3>
			
		</div>
		<div class="mt-1 p-2 text-center text-grey">
			<p class="mb-2">
				{description}
			</p>
		</div>
	</article>
</section>